<h1><%= @sponsored_post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @sponsored_post.body %></p>
      <p><%= @sponsored_post.price %></p>    #price
  </div>

  <div class="col-md-4">
<!-- edit button directs user to helper method / nb type rails routes in terminal to see... -->
<!-- overrides default method.. :delete instead of :post -->
    <%= link_to "Edit", edit_topic_post_path(@sponsored_post.topic, @sponsored_post), class: 'btn btn-success' %>
    <%= link_to "Delete Sponosored Post", [@sponsored_post.topic, @sponsored_post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this sponsored post?' } %>
  </div>
</div>
