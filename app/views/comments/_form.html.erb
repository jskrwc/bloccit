<h4>Add a comment</h4>
<!-- create form for post and comment, bc comments nested under posts -->
<%= form_for [post, comment] do |f| %>
  <div class="form-group">
<!-- class sr-only adds hidden label for users with screen readers -->
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new comment" %>
  </div>
  <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
<% end %>
